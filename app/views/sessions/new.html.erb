<h1>Login</h1>
<%= form_tag login_path do %>
  <div class="field">
    <label for="email">Email:</label>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <label for="password">Password:</label>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
